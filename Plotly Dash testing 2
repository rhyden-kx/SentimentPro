topic_frequency_promoter_df = pd.DataFrame({'Topic_Name': topic_frequency_promoter.index, 'Frequency': topic_frequency_promoter.values})

topic_frequency_promoter_graph = go.Figure(data=[go.Table(
    columnorder = [1,2],
    columnwidth = [80,40],
